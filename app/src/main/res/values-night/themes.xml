<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Book" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#F2F4F4</item>
        <item name="colorOnPrimary">#000000</item>

        <item name="colorSecondary">#F8F9FA</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="favoriteColor">@color/red_1</item>

        <item name="android:colorBackground">#121212</item>
        <item name="android:windowBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorSur">@color/dark_gray</item>

        <item name="android:statusBarColor">@color/black</item>

        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="materialAlertDialogTheme">@style/App.MaterialAlertDialog</item>
    </style>

    <style name="App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
    </style>
</resources>
